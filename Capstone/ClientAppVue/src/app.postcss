@tailwind base;
@tailwind components;
@tailwind utilities;

@base {
    body {
        @apply mx-auto max-w-max;
    }
    #app {
        @apply max-w-screen-2xl mx-auto p-10 font-sans;
    }

    h1 {
        @apply font-bold text-2xl;
    }

    h2 {
        @apply font-bold text-xl;
    }

    hr {
        @apply my-5;
    }
}

@components {
}
