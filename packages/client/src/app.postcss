@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
    body {
        @apply mx-auto max-w-max;
    }

    h1 {
        @apply font-bold text-2xl;
    }

    h2 {
        @apply font-bold text-xl;
    }

    h3 {
        @apply font-bold text-lg;
    }

    h4 {
        @apply font-semibold text-lg;
    }

    hr {
        @apply my-5;
    }
}

