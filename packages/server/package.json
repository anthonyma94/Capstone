{
    "name": "@capstone/server",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "private": true,
    "dependencies": {
        "@mikro-orm/core": "^4.5.9",
        "@mikro-orm/mariadb": "^4.5.9",
        "@mikro-orm/reflection": "^4.5.9",
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.6",
        "dayjs": "^1.10.6",
        "express": "^4.17.1",
        "inversify": "^5.1.1",
        "inversify-binding-decorators": "^4.0.0",
        "inversify-express-utils": "^6.3.2",
        "jsonwebtoken": "^8.5.1",
        "uuid": "^8.3.2"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/config/mikro-orm.config.ts",
            "./dist/config/mikro-orm.config.js"
        ]
    },
    "nodemonConfig": {
        "execMap": {
            "ts": "ts-node -r dotenv/config"
        },
        "ignore": [
            "./src/seed-database.ts",
            "./src/assets/**/*"
        ],
        "watch": [
            "src/"
        ]
    },
    "scripts": {
        "build": "rimraf ../../dist && rimraf ../../tsconfig.tsbuildinfo && tsc --build",
        "dev": "nodemon src/index.ts",
        "dev:inspect": "nodemon --inspect -e ts,tsx --exec node -r ts-node/register -r dotenv/config src/index.ts",
        "init-db": "ts-node -r dotenv/config src/seed-database dotenv_config_path=./.env"
    },
    "devDependencies": {
        "@mikro-orm/cli": "^4.5.9",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/node": "^16.7.2",
        "@types/uuid": "^8.3.1",
        "dotenv": "^10.0.0",
        "nodemon": "^2.0.12",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.3.5"
    }
}
