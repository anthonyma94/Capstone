{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "declaration": true,
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist"]
}
